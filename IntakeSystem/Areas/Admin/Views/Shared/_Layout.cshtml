<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Areas/Admin/Resource/Bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Resource/Bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Resource/Bootstrap/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Resource/Bootstrap/css/bootstrap-rtl.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Resource/Bootstrap/css/bootstrap-tagsinput.css" rel="stylesheet" />


    <link href="~/Areas/Admin/Resource/style.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Resource/style-rtl.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Resource/css/uikit.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Resource/DataPicker/jquery.md.bootstrap.datetimepicker.style.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Resource/Load.css" rel="stylesheet" />

</head>
<body>

    <div class="wrapper flex-div">
        <div class="layout flex-div">
            <!-- Side Nav START -->
            <div class="side-nav">
                <div class="side-nav-inner">
                    <div class="side-nav-logo">
                        <a href="/" class="uk-margin-auto row">
                            <img src="/st/r/logo.jpg" width="48" style="height:44px !important" alt="لوگو بهبود تاو">
                        </a>
                        <div class="mobile-toggle side-nav-toggle">
                            <a href="#" uk-icon="chevron-back-outline">
                            </a>
                        </div>
                    </div>
                    <ul class="side-nav-menu scrollable">
                        <li class="nav-item active">
                            <a href="/Admin/Home" class="LoadingDiv">
                                <span class="icon-holder">
                                    <i uk-icon="home"></i>
                                </span>
                                <span class="title">داشبورد</span>
                            </a>
                        </li>

                        <li class="nav-item active">
                            <a href="/Admin/Hospital" class="LoadingDiv">
                                <span class="icon-holder">
                                    <i uk-icon="business"></i>
                                </span>
                                <span class="title">مراکز درمانی</span>
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a href="/Admin/User" class="LoadingDiv">
                                <span class="icon-holder">
                                    <i uk-icon="people"></i>
                                </span>
                                <span class="title">کاربران</span>
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a href="/Admin/Setting" class="LoadingDiv">
                                <span class="icon-holder">
                                    <i uk-icon="settings"></i>
                                </span>
                                <span class="title">تنظیمات</span>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
            <!-- Side Nav END -->
            <!-- Page Container START -->
            <div class="page-container flex-div">
                <!-- Header START -->
                <div class="header navbar">
                    <div class="header-container">
                        <ul class="nav-right float-right mr-3">
                            <li>
                                <a class="side-nav-toggle" href="javascript:void(0);" uk-icon="menu-outline">

                                </a>
                            </li>
                        </ul>
                        <a href="/logout" class="nav-left float-left ml-5 mt-4 text-secondary"> <span uk-icon="log-out"></span>خروج از حساب</a>

                    </div>
                </div>
                <div class="sub-header">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb rounded-0 m-0 bg-white">
                            <li class="breadcrumb-item p-0"><a href="/admin/Home">داشبورد</a></li>
                            <li class="breadcrumb-item p-0 active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
                <!-- Header END -->
                <!-- Content Wrapper START -->
                <div class="main-content flex">
                    <div class="container-fluid flex-div">
                        @RenderBody()
                    </div>
                </div>
                <!-- Content Wrapper END -->
                <!-- Footer START -->
                <footer class="content-footer bg-white">
                    <div class="footer border-0">
                        <div class="copyright">
                            <span><b class="text-dark">بهبود تاو</b> 2021</span>
                        </div>
                    </div>
                </footer>
                <!-- Footer END -->
            </div>
            <!-- Page Container END -->
        </div>
    </div>
</body>
</html>

<!-- Modal -->
<div class="modal fade" id="modalSave" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            @*JS Dynamic*@
        </div>
    </div>
</div>
<!-- Button trigger modal -->
<!--Loading-->
<div id="overlay">
    <div class="cv-spinner">
        <span class="spinner"></span>
    </div>
</div>
<!--Loading-->


<script src="~/Areas/Admin/Resource/Jquery/jquery-3.4.1.js"></script>
<script src="~/Areas/Admin/Resource/Jquery/jquery-3.4.1.min.js"></script>


<script src="~/Content/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/Content/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>



<script src="~/Areas/Admin/Resource/Jquery/modal.js"></script>
<script src="~/Areas/Admin/Resource/Jquery/popper.min.js"></script>
<script src="~/Areas/Admin/Resource/Bootstrap/js/bootstrap.js"></script>
<script src="~/Areas/Admin/Resource/Bootstrap/js/bootstrap.min.js"></script>
<script src="~/Areas/Admin/Resource/Bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/Areas/Admin/Resource/Bootstrap/js/bootstrap.bundle.js"></script>
<script src="~/Areas/Admin/Resource/js/uikit.min.js"></script>
<script src="~/Areas/Admin/Resource/js/uikit-icons.js"></script>
<link href="~/Areas/Admin/Resource/DataPicker/jquery.md.bootstrap.datetimepicker.style.css" rel="stylesheet" />
<script src="~/Areas/Admin/Resource/script.js"></script>
<script src="~/Areas/Admin/Resource/js/ckeditor/ckeditor.js"></script>
<script src="~/Areas/Admin/Resource/js/ckeditor/adapters/jquery.js"></script>
<script src="~/Areas/Admin/Resource/js/BjaxLib.js"></script>










<script>
    $(".LoadingDiv").click(function () {
        $("#overlay").fadeIn(300);
    });
</script>
@RenderSection("Script", false)
