@model IEnumerable<DataLayer.Models.TblUser>
@{
    ViewBag.Title = "کاربران";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white">
                <div class="pr-1 pt-2">
                    <div class="card-form form-row">
                        <div class="form-input">
                            <div class="form-inline">
                                <div class="form-group mx-sm-1 mb-2 mr-1 mr-md-0">
                                    <input id="SearchInput" class="form-control uk-text-small" type="text" placeholder="نام کاربر" value="">
                                </div>
                                <div class="form-group mx-sm-1 mb-2 mr-1 mr-md-0">
                                    <input id="SearchInput" class="form-control uk-text-small" type="tel" placeholder="شماره تماس" value="">
                                </div>
                                <div class="form-group mx-sm-1 mb-2 mr-1 mr-md-0">
                                    <input id="SearchInput" class="form-control uk-text-small" type="number" placeholder="کد ملی" value="">
                                </div>
                            </div>
                        </div>
                        <div class="form-toolbar mr-md-3 mr-1">
                            <button onclick="BtnSearch()" type="button" class="btn btn-primary btn-sm">جستجو<span class="icon-holder uk-margin-small-right" uk-icon="search-outline"></span></button>
                            <button id="Create" data-toggle="modal" data-target="#modalSave" class="btn btn-success btn-sm float-left mr-2">افزودن<span class="icon-holder uk-margin-small-right" uk-icon="add-circle-outline"></span></button>
                        </div>
                    </div>
                </div>
            </div>
            <!--list region-->
            <div id="card-table" class="card-body flex-div">
                <div class="table-responsive flex">
                    <table class="table fixed">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">نام کاربر</th>
                                <th scope="col">شماره تماس</th>
                                <th scope="col">نقش</th>
                                <th scope="col">وضعیت</th>
                                <th scope="col">جزئیات</th>
                                <th scope="col">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="userId_@item.UserId">
                                    <td>@item.Name</td>
                                    <td>@item.TellNo</td>
                                    <td>@item.TblRole.Name</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <a href="#" onclick="activeDisableUser(@item.UserId)" class="text-success badge-pill">فعال</a>
                                        }
                                        else
                                        {
                                            <a href="#" onclick="activeDisableUser(@item.UserId)" class="text-danger  badge-pill">غیر فعال</a>
                                        }
                                    </td>
                                    <td>
                                        <span data-placement="top" data-toggle="tooltip" title="" data-original-title="جزئیات">
                                            <a onclick="Information(@item.UserId)" data-toggle="modal" data-target="#modalSave" class="text-primary" uk-icon="information-circle"></a>
                                        </span>
                                    </td>
                                    <td>
                                        <span data-placement="top" data-toggle="tooltip" title="" data-original-title="ویرایش">
                                            <a href="#" data-toggle="modal" data-target="#modalSave" onclick="EditUser(@item.UserId)"><i class="btn fas fa-edit mr-2 text-primary">ویرایش</i></a>
                                        </span>
                                        <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                                            <a onclick="deleteUser(@item.UserId)"><i class="btn fas fa-trash mr-2 text-danger">حذف</i></a>
                                        </span>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>

            <!--end list region-->
            <div class="card-footer bg-white">
