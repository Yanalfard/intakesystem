<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        افزودن کاربر
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form>
    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>نام کاریر</label>
                <input class="form-control" type="text" placeholder="مثال: علی علیزاده">
            </div>
            <div class="form-group col-md-3">
                <label>شماره تماس</label>
                <input class="form-control" type="tel" placeholder="...09">
            </div>
            <div class="form-group col-md-3">
                <label>کد ملی</label>
                <input class="form-control" type="number" placeholder="">
            </div>
            <div class="form-group col-md-3">
                <label>رمز عبور</label>
                <input class="form-control" type="password" placeholder="">
            </div>
        </div>
        <div class="form-row bg-light p-2">
            <div class="form-check col-md-3">
                <label>جنسیت</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gender" id="Female" value="Female" checked>
                    <label class="form-check-label" for="Female">
                        زن
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gender" id="Male" value="Male">
                    <label class="form-check-label" for="male">
                        مرد
                    </label>
                </div>
            </div>
            <div class="form-check col-md-3">
                <label>نقش</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Role" id="MainAdmin" value="MainAdmin" checked>
                    <label class="form-check-label" for="MainAdmin">
                        ادمین اصلی
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Role" id="HospitalAdmin" value="HospitalAdmin">
                    <label class="form-check-label" for="HospitalAdmin">
                        ادمین مرکز درمانی
                    </label>
                </div>
            </div>
            <div class="form-check col-md-3 mr-4">
                <input type="checkbox" class="form-check-input " id="ActiveCheck">
                <label class="form-check-label" for="ActiveCheck">فعال است</label>
            </div>
        </div>
    </div>
    <div class="modal-footer justify-content-end">
        <button type="submit" class="btn btn-success btn-sm text-white">افزودن<span class="icon-holder uk-margin-small-right" uk-icon="add-circle-outline"></span></button>
    </div>
</form>
