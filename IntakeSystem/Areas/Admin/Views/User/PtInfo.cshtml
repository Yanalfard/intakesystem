@model DataLayer.Models.TblUser
<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        جزئیات کاربر
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="form-row ">
        <div class="form-group col-md-3">
            <label>نام  کاربر: </label>
            <span>@Model.Name</span>
        </div>
        <div class="form-group col-md-3">
            <label>شماره تماس: </label>
            <span>@Model.TellNo</span>
        </div>
        <div class="form-group col-md-3">
            <label>کد ملی: </label>
            <span>@Model.IdentificationNo</span>
        </div>
        <div class="form-group col-md-3">
            <label>جنسیت:</label>
            @if (Model.Gender)
            {
                <span>مرد</span>
            }
            else
            {
                <span>زن</span>
            }
        </div>
        <div class="form-group col-md-3">
            <label>نقش: </label>
            <span>@Model.TblRole.Title</span>
        </div>
        <div class="form-group col-md-3">
            <label>وضعیت: </label>
            @if (Model.IsActive)
            {
                <span class="text-success">فعال</span>
            }
            else
            {
                <span class="text-danger">غیر فعال</span>
            }
        </div>
    </div>
    <hr />
    <div class="form-group col-12">
        <label>توضیحات:</label>
        <div class="bg-light p-3 uk-border-rounded">
            @Model.DoctorDescription
        </div>
    </div>
    <div class="form-group col-12">
        <label>آدرس:</label>
        <div class="bg-light p-3 uk-border-rounded">
            @Model.Address
        </div>
    </div>
</div>


