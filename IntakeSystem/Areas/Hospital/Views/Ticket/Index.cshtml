@model IEnumerable<DataLayer.Models.TblTicket>
@{
    ViewBag.Title = "تیکت";
    Layout = "~/Areas/Hospital/Views/Shared/_Layout.cshtml";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white">
                <div class="pr-1 pt-2">
                    <div class="card-form form-row">
                        <div class="form-input">
                            <div class="form-inline">
                                <div class="form-group mx-sm-1 mb-2 mr-1 mr-md-0">
                                    <input id="SearchInput" class="form-control uk-text-small" type="text" placeholder="نام کاربر" value="">
                                </div>
                                <div class="form-group mx-sm-1 mb-2 mr-1 mr-md-0">
                                    <input id="SearchInput" class="form-control uk-text-small" type="tel" placeholder="شماره تماس" value="">
                                </div>
                            </div>
                        </div>
                        <div class="form-toolbar mr-md-3 mr-1">
                            <button onclick="BtnSearch()" type="button" class="btn btn-primary btn-sm">جستجو<span class="icon-holder uk-margin-small-right" uk-icon="search-outline"></span></button>
                        </div>
                    </div>
                </div>
            </div>
            <!--list region-->
            <div id="card-table" class="card-body flex-div">
                <div class="table-responsive flex">
                    <table class="table fixed">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">نام کاربر</th>
                                <th scope="col">شماره تماس</th>
                                <th scope="col">محتویات تیکت</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TblUser.Name </td>
                                    <td>@item.TblUser.TellNo</td>
                                    <td>
                                        <a href="/Hospital/Ticket/InnerTicket/@item.TicketId" class="text-info" uk-icon="chatbubbles"></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>

