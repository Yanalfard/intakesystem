
<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        ویرایش اطلاعات پزشک
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form>
    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>نام پزشک</label>
                <input class="form-control" type="text" placeholder="مثال: علی علیزاده">
            </div>
            <div class="form-group col-md-3">
                <label>شماره تماس</label>
                <input class="form-control" type="tel" placeholder="...09">
            </div>
            <div class="form-group col-md-3">
                <label>کد ملی</label>
                <input class="form-control" type="number" placeholder="...">
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>رمز عبور</label>
                <input class="form-control" type="password" placeholder="...">
            </div>
            <div class="form-group col-md-4">
                <label for="">تخصص</label>
                <select class="form-control" id="">
                    <option>تخصص </option>
                    <option>تخصص 2</option>
                </select>
            </div>
        </div>
        <div class="form-row bg-light pt-2">
            <div class="form-check col-md-3">
                <label>جنسیت</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gender" id="Female" value="Female" checked>
                    <label class="form-check-label" for="Female">
                        زن
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gender" id="Male" value="Male">
                    <label class="form-check-label" for="male">
                        مرد
                    </label>
                </div>
            </div>
            <div class="form-check col-md-3 mr-4">
                <input type="checkbox" class="form-check-input " id="ActiveCheck">
                <label class="form-check-label" for="ActiveCheck">فعال است</label>
            </div>
        </div>
        <label class="mt-3">ویرایش تصویر</label>
        <div class="form-row">
            <div class="custom-file form-group col-md-7 ">
                <input type="file" class="custom-file-input form-control form-control-sm" onchange="inputChanged(this)">
                <label class="custom-file-label" for="Image" data-browse="انتخاب" id="FileName">انتخاب تصویر</label>
            </div>
        </div>
        <div class="form-row mt-3">
            <div class="form-group col-12">
                <label>توضیحات کوتاه</label>
                <textarea class="textarea-fix-height-120" placeholder=" متن توضیحات... "></textarea>
            </div>
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer justify-content-end">
        <button type="submit" class="btn btn-success btn-sm text-white">ویرایش<span class="icon-holder uk-margin-small-right" uk-icon="create-outline"></span></button>
    </div>
</form>
<script>
    function inputChanged(sender) {
        var fileName = sender.files[0].name;
        sender.parentElement.querySelector('.custom-file-label').innerHTML = fileName;
    }
</script>
