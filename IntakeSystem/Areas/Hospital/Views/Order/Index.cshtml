                                <th scope="col">وضعیت تسویه</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>زهرا رضایی</td>
                                <td>ژاله منصوری</td>
                                <td>
                                    فلان تاریخ
                                </td>
                                <td>
                                    200000
                                </td>
                                <td>
                                    10
                                </td>
                                <td>
                                    <span data-placement="top" data-toggle="tooltip" title="" data-original-title="جزئیات">
                                        <a id="Information" data-toggle="modal" data-target="#modalSave" class="text-primary" uk-icon="information-circle"></a>
                                    </span>
                                </td>
                                <td>
                                    <span class="text-success">تسویه شده است</span>
                                    <span data-placement="top" data-toggle="tooltip" title="" data-original-title="تسویه شده است">
                                        <a onclick="ChangeStatus(this)" class="AskStatus"><span class="text-success" uk-icon="checkmark-circle">؟</span></a>
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

