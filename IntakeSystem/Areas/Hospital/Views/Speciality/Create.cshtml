@model DataLayer.Models.TblSpeciality

@using (Ajax.BeginForm("Create", "Speciality", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "CreateCatagory" }, htmlAttributes: new { @id = "CreateCatagory" }))
{
    <div class="modal-header">
        <h6 class="modal-title" id="modalCenterTitle">
            ایجاد تخصص
        </h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-row">
            <label>نام تخصص </label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "مثال: قلب", required = "required" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="modal-footer justify-content-end">
        <button type="submit" class="btn btn-success btn-sm text-white">ایجاد <span class="icon-holder uk-margin-small-right" uk-icon="add-circle-outline"></span></button>
    </div>
}


