            <div class="my-column">
                <div class="my-center MobileSize">
                    <div class="my-center">
                        <img src="~/img/formStatic/ConfirmInfo.svg" alt="picture"/>
                    </div>
                </div>
                <div class="my-center information">
                    <ul class="uk-text-right uk-margin-large-right uk-margin-medium-top">
                        <li class="uk-margin-small-top">
                            <span class="mytext-darkBlue" uk-icon="icon: person-outline"></span>
