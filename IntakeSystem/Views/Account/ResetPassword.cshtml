
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Styles/LoginRegister.min.css" rel="stylesheet" />
<section class="Reset-password-section">
    <content class="my-flex-card my-row my-clipped my-center" dir="rtl">
        <div class="my-column uk-margin-medium-bottom">
            <label class="uk-legend uk-margin-bottom uk-text-bold code-label">
            <span>کد دریافتی را وارد کنید</span>
        </label>
        <img class="my-center MobileSize" src="~/img/formStatic/ForgetPassword.svg" width="250" alt="picture" />
        <form>
            <fieldset class="uk-fieldset">
                <div class="uk-margin">
                    <div class="uk-inline">
                        <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon:download"></span>
                        <input class="uk-input card-with-border" type="text" placeholder="کد دریافتی">
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-legend uk-margin-bottom uk-text-bold new-pass-label">
                        <span>رمز عبور جدیدی انتخاب کنید</span>
                    </label>
                    <div class="uk-inline">
                        <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon:key"></span>
                        <input class="uk-input card-with-border" type="text" placeholder="رمز عبور">
                    </div>
                </div>
                    <button onclick="location.href=''" class="light-blue-button my-center uk-margin-top">
                        ارسال
                    </button>
            </fieldset>
        </form>
        </div>
        <div class="DesktopSize">
            <img src="~/img/formStatic/ForgetPassword.svg" width="360" alt="picture" />
        </div>
    </content>
</section>

